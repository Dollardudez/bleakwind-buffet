<UserControl x:Class="PointOfSale.OrderSideBar.Order"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.OrderSideBar"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height=".5*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Order" Grid.Row="0" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold" Foreground="#769A9A"/>
        <TextBlock Text="Total" Grid.Row="2" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold" Foreground="#769A9A"/>
        <Border Name="orderOpenSpace" Grid.Row="1" Background="#F2F5F5" CornerRadius="40" Width="170"/>
        <Border Grid.Row="3" CornerRadius="30" Background="#F2F5F5" Height="50" Width="170"/>
    </Grid>
</UserControl>
