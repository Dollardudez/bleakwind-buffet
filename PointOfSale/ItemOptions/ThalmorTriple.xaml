<UserControl x:Class="PointOfSale.ItemOptions.ThalmorTriple"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.ItemOptions"
             mc:Ignorable="d" 
            d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Button x:Name="uxAddToOrder" Grid.Column="0" Grid.Row="2" Content="Back" FontSize="30" Height="90" Width="200" HorizontalAlignment="Left" Click="uxAddToOrder_Click"/>
        <Button x:Name="uxBack" Grid.Column="1" Grid.Row="2" Content="Add To Order" FontSize="30" Height="90" Width="200" HorizontalAlignment="right" Click="uxBack_Click"/>
        <TextBlock x:Name="NameOfItem" Text="Thalmor Triple" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="2" FontSize="30"/>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
            <CheckBox x:Name="Bun" Content="Bun" VerticalAlignment="Center" Checked="Bun_Checked" />
            <CheckBox x:Name="Ketchup" Content="Ketchup" Checked="Ketchup_Checked"/>
            <CheckBox x:Name="Mustard" Content="Mustard" Checked="Mustard_Checked"/>
            <CheckBox x:Name="Pickle" Content="Pickle" Checked="Pickle_Checked"/>
            <CheckBox x:Name="Cheese" Content="Cheese" Checked="Cheese_Checked"/>
            <CheckBox x:Name="Tomato" Content="Tomato" Checked="Tomato_Checked"/>
            <CheckBox x:Name="Lettuce" Content="Lettuce" Checked="Lettuce_Checked"/>
            <CheckBox x:Name="Mayo" Content="Mayo" Checked="Mayo_Checked"/>
            <CheckBox x:Name="Bacon" Content="Bacon" Checked="Bacon_Checked"/>
            <CheckBox x:Name="Egg" Content="Egg" Checked="Egg_Checked"/>
        </StackPanel>
    </Grid>
</UserControl>
